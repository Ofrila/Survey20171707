<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/tv_WelcomeSvyU"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="SvyU"
        android:textSize="26sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:id="@+id/tv_welcome1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME TO"
        android:textSize="27sp"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="30sp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/tv_WelcomeSvyU"

        />

    <TextView
        android:id="@+id/tv_welcome2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAKE PART IN OUR SURVEY!"
        android:textColor="@color/colorBlack"
        android:textSize="23sp"
        android:layout_marginLeft="50sp"
        android:layout_below="@id/tv_welcome1"
        />

    <TextView
        android:id="@+id/tv_welcomeBefore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="30sp"
        android:text="Before we start,here are things you should know:"
        android:textSize="23sp"
        android:layout_below="@id/tv_welcome2"/>

    <TextView
        android:id="@+id/tv_before1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="30sp"
        android:text="-Please be honest when making your choice."
        android:textSize="20sp"
        android:layout_below="@id/tv_welcomeBefore"/>

    <TextView
        android:id="@+id/tv_before2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="30sp"
        android:text="-We are just doing a research so you don't have to fake your information."
        android:textSize="20sp"
        android:layout_below="@id/tv_before1"/>

    <TextView
        android:id="@+id/tv_before3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="30sp"
        android:text="-Please follow the step we designed for you and don't skip any questions."
        android:textSize="20sp"
        android:layout_below="@id/tv_before2"
        />

    <CheckBox
        android:id="@+id/cb_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="50sp"
        android:text="I accept these requests."
        android:textSize="17sp"
        android:layout_below="@id/tv_before3"
        />


    <Button
        android:id="@+id/btn_start"
        android:layout_width="300sp"
        android:layout_below="@id/cb_accept"
        android:layout_height="wrap_content"

        android:background="@color/colorPrimary"
        android:text="LETS START"
        android:textSize="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="66sp"

        />



    <!-- END    : Your code should be within this block -->
</RelativeLayout>